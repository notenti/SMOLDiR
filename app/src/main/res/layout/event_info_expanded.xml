<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_info_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/thermalImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:src="@drawable/ic_alarm_1" />

    <TextView
        android:id="@+id/eventTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thermalImage"
        android:text="Event Type"
        android:textAppearance="?android:attr/textAppearance" />

    <TextView
        android:id="@+id/eventDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventTypeTitle"
        android:layout_toRightOf="@id/thermalImage"
        android:text="Event Data"
        android:textAppearance="?android:attr/textAppearance" />

    <TextView
        android:id="@+id/eventLocationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventDateTitle"
        android:layout_toRightOf="@id/thermalImage"
        android:text="Event Location"
        android:textAppearance="?android:attr/textAppearance" />


</RelativeLayout>